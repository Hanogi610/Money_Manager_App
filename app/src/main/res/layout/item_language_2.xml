<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginVertical="@dimen/margin_6dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:cardCornerRadius="@dimen/margin_8dp"
        app:cardElevation="@dimen/margin_8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:clipToPadding="false"
            android:paddingVertical="@dimen/pad_16dp">

            <ImageView
                android:id="@+id/ivFlag"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:importantForAccessibility="no"
                android:src="@drawable/us_flag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvLanguage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:text="@string/english"
                android:singleLine="true"
                android:fontFamily="@font/sfprodisplay_semibold_italic"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@id/ivSelect"
                app:layout_constraintStart_toEndOf="@id/ivFlag"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/ivSelect"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:background="@drawable/radio_button_no"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>

