<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/secondaryBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/primaryTextColor"
                android:gravity="center"
                android:id="@+id/titleLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/pick_currency"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pad_24dp"
                android:layout_marginEnd="@dimen/pad_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="16sp"
                android:textColor="?attr/primaryTextColor"
                android:gravity="center"
                android:id="@+id/detailLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_12dp"
                android:text="@string/pick_currency_hint"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/pad_24dp"
                android:layout_marginEnd="@dimen/pad_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleLabel"/>
            <EditText
                android:textSize="16sp"
                android:id="@+id/currencyEditText"
                android:background="@drawable/background_edit_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/full_screen_edit_text_height"
                android:layout_marginTop="@dimen/pad_16dp"
                android:hint="@string/currency_picker"
                android:ems="10"
                android:inputType="textPersonName"
                android:drawableEnd="?attr/editTextCaret"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/pad_8dp"
                android:layout_marginStart="@dimen/pad_24dp"
                android:layout_marginEnd="@dimen/pad_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailLabel"/>
            <Button
                android:textColor="@android:color/white"
                android:id="@+id/nextButton"
                android:background="@drawable/background_button_state"
                android:layout_width="0dp"
                android:layout_height="@dimen/full_screen_button_height"
                android:layout_marginTop="@dimen/pad_16dp"
                android:layout_marginBottom="@dimen/pad_24dp"
                android:text="@string/next"
                android:layout_marginStart="@dimen/pad_24dp"
                android:layout_marginEnd="@dimen/pad_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/currencyEditText"
                style="?android:attr/borderlessButtonStyle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>