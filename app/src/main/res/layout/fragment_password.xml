<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="@dimen/_150dp"
            android:layout_height="@dimen/_181dp"
            android:layout_marginTop="@dimen/_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_password" />

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16dp"
            android:letterSpacing="0.02"
            android:text="@string/enter_your_pass_code"
            android:textSize="@dimen/_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_lock" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44dp"
            android:layout_marginHorizontal="@dimen/_32dp"
            android:layout_marginTop="@dimen/_16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_input">

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupIncoming"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:constraint_referenced_ids="pc_1,pc_2, pc_3, pc_4, pc_5, pc_6" />

            <EditText
                android:id="@+id/pc_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:background="@drawable/bg_number"
                android:gravity="center"
                android:text="@string/subtract" />

            <EditText
                android:id="@+id/pc_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:background="@drawable/bg_number"
                android:gravity="center"
                android:text="@string/subtract" />

            <EditText
                android:id="@+id/pc_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:background="@drawable/bg_number"
                android:gravity="center"
                android:text="@string/subtract" />

            <EditText
                android:id="@+id/pc_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:background="@drawable/bg_number"
                android:gravity="center"
                android:text="@string/subtract" />

            <EditText
                android:id="@+id/pc_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:background="@drawable/bg_number"
                android:gravity="center"
                android:text="@string/subtract" />

            <EditText
                android:id="@+id/pc_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:background="@drawable/bg_number"
                android:gravity="center"
                android:text="@string/subtract" />
        </LinearLayout>

        <include
            android:id="@+id/keyboard"
            layout="@layout/layout_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
