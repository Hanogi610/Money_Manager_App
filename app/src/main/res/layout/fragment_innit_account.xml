<?xml version="1.0" encoding="utf-8" ?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/startGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.3333"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/endGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.6667"/>
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:id="@+id/skip"
                    android:background="@drawable/background_amount_digit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/full_screen_button_height"
                    android:layout_marginTop="@dimen/pad_8dp"
                    android:text="@string/skip"
                    android:layout_marginEnd="@dimen/pad_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="?android:attr/borderlessButtonStyle"/>
                <TextView
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:id="@+id/titleLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_16dp"
                    android:text="@string/initial_amount"
                    android:textAlignment="center"
                    android:layout_marginStart="@dimen/pad_24dp"
                    android:layout_marginEnd="@dimen/pad_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/skip"/>
                <TextView
                    android:textSize="16sp"
                    android:id="@+id/detailLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_12dp"
                    android:text="@string/create_amount_hint"
                    android:textAlignment="center"
                    android:layout_marginStart="@dimen/pad_24dp"
                    android:layout_marginEnd="@dimen/pad_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleLabel"/>
                <EditText
                    android:textSize="22sp"
                    android:id="@+id/amountEditText"
                    android:background="@drawable/background_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/full_screen_edit_text_height"
                    android:layout_marginTop="@dimen/pad_16dp"
                    android:layout_marginBottom="@dimen/pad_24dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:layout_marginStart="@dimen/pad_24dp"
                    android:layout_marginEnd="@dimen/pad_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailLabel"/>
                <ImageButton
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    app:tint="?attr/primaryDarkTextColor"
                    android:cropToPadding="false"
                    android:contentDescription="@string/escape"
                    android:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/amountEditText"
                    app:layout_constraintEnd_toEndOf="@+id/amountEditText"
                    app:layout_constraintTop_toTopOf="@+id/amountEditText"
                    app:srcCompat="@drawable/escape"
                    style="?android:attr/borderlessButtonStyle"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <Button
            android:textSize="20sp"
            android:id="@+id/one"
            android:tag="1"
            android:background="@drawable/background_amount_digit"
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_number_height"
            android:text="1"
            android:textColor="@drawable/back"
            app:layout_constraintBottom_toTopOf="@+id/four"
            app:layout_constraintEnd_toStartOf="@+id/startGuideline"
            app:layout_constraintStart_toStartOf="parent"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:textSize="20sp"
            android:textColor="?attr/primaryTextColor"
            android:id="@+id/four"
            android:tag="4"
            android:background="@drawable/background_amount_digit"
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_number_height"
            android:text="4"
            app:layout_constraintBottom_toTopOf="@+id/seven"
            app:layout_constraintEnd_toStartOf="@+id/startGuideline"
            app:layout_constraintStart_toStartOf="parent"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:textSize="20sp"
            android:textColor="?attr/primaryTextColor"
            android:id="@+id/seven"
            android:tag="7"
            android:background="@drawable/background_amount_digit"
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_number_height"
            android:text="7"
            app:layout_constraintBottom_toTopOf="@+id/decimal"
            app:layout_constraintEnd_toStartOf="@+id/startGuideline"
            app:layout_constraintStart_toStartOf="parent"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:textSize="20sp"
            android:textColor="?attr/primaryTextColor"
            android:id="@+id/two"
            android:tag="2"
            android:background="@drawable/background_amount_digit"
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_number_height"
            android:text="2"
            app:layout_constraintBottom_toTopOf="@+id/five"
            app:layout_constraintEnd_toStartOf="@+id/endGuideline"
            app:layout_constraintStart_toStartOf="@+id/startGuideline"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:textSize="20sp"
            android:textColor="?attr/primaryTextColor"
            android:id="@+id/five"
            android:tag="5"
            android:background="@drawable/background_amount_digit"
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_number_height"
            android:text="5"
            app:layout_constraintBottom_toTopOf="@+id/eight"
            app:layout_constraintEnd_toStartOf="@+id/endGuideline"
            app:layout_constraintStart_toStartOf="@+id/startGuideline"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:textSize="20sp"
            android:textColor="?attr/primaryTextColor"
            android:id="@+id/eight"
            android:tag="8"
            android:background="@drawable/background_amount_digit"
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_number_height"
            android:text="8"
            app:layout_constraintBottom_toTopOf="@+id/zero"
            app:layout_constraintEnd_toStartOf="@+id/endGuideline"
            app:layout_constraintStart_toStartOf="@+id/startGuideline"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:textSize="20sp"
            android:textColor="?attr/primaryTextColor"
            android:id="@+id/three"
            android:tag="3"
            android:background="@drawable/background_amount_digit"
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_number_height"
            android:text="3"
            app:layout_constraintBottom_toTopOf="@+id/six"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/endGuideline"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:textSize="20sp"
            android:textColor="?attr/primaryTextColor"
            android:id="@+id/six"
            android:tag="6"
            android:background="@drawable/background_amount_digit"
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_number_height"
            android:text="6"
            app:layout_constraintBottom_toTopOf="@+id/nine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/endGuideline"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:textSize="20sp"
            android:textColor="?attr/primaryTextColor"
            android:id="@+id/nine"
            android:tag="9"
            android:background="@drawable/background_amount_digit"
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_number_height"
            android:layout_marginBottom="@dimen/keyboard_number_height"
            android:text="9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/endGuideline"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:textSize="20sp"
            android:textColor="?attr/primaryTextColor"
            android:id="@+id/zero"
            android:tag="0"
            android:background="@drawable/background_amount_digit"
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_number_height"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/endGuideline"
            app:layout_constraintStart_toStartOf="@+id/startGuideline"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:textSize="20sp"
            android:textColor="?attr/primaryTextColor"
            android:id="@+id/decimal"
            android:tag="0"
            android:background="@drawable/background_amount_digit"
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_number_height"
            android:text="."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/startGuideline"
            app:layout_constraintStart_toStartOf="parent"
            style="?android:attr/borderlessButtonStyle"/>
        <FrameLayout
            android:id="@+id/done"
            android:background="@drawable/background_amount_done"
            android:layout_width="@dimen/create_amount_frame_size"
            android:layout_height="@dimen/create_amount_frame_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/endGuideline"
            app:layout_constraintTop_toBottomOf="@+id/nine">

            <ImageView
                android:id="@+id/doneImage"
                android:layout_width="@dimen/create_amount_image_size"
                android:layout_height="@dimen/create_amount_image_size"
                android:layout_gravity="center"
                app:srcCompat="@drawable/done"
                app:tint="#ffffffff" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>