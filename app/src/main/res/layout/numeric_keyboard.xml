<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/numeric_keyboard.xml -->
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3">

    <!-- Number 1 -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="1"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Number 2 -->
    <Button
        android:id="@+id/btn2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="2"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Number 3 -->
    <Button
        android:id="@+id/btn3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="3"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="4"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Number 5 -->
    <Button
        android:id="@+id/btn5"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="5"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Number 6 -->
    <Button
        android:id="@+id/btn6"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="6"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Number 7 -->
    <Button
        android:id="@+id/btn7"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="7"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Number 8 -->
    <Button
        android:id="@+id/btn8"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="8"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Number 9 -->
    <Button
        android:id="@+id/btn9"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="9"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:background="@drawable/ic_check_circle"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Number 0 -->
    <Button
        android:id="@+id/btn0"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:backgroundTint="#D3D3D3"
        android:text="0"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Delete Button -->
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:background="@drawable/ic_backspace"
        android:backgroundTint="#D3D3D3"
        android:textColor="#FF0000"
        android:textSize="24sp" />

</GridLayout>
